generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model barber {
  id            Int             @id @default(autoincrement())
  name          String
  shopId        Int
  workStartHour Int
  workEndHour   Int
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  shop          shop            @relation(fields: [shopId], references: [id], map: "Barber_shopId_fkey")
  barberservice barberservice[]
  booking       booking[]

  @@index([shopId], map: "Barber_shopId_fkey")
}

model barberservice {
  id        Int      @id @default(autoincrement())
  barberId  Int
  serviceId Int
  price     Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  barber    barber   @relation(fields: [barberId], references: [id], map: "BarberService_barberId_fkey")
  service   service  @relation(fields: [serviceId], references: [id], map: "BarberService_serviceId_fkey")

  @@unique([barberId, serviceId], map: "BarberService_barberId_serviceId_key")
  @@index([serviceId], map: "BarberService_serviceId_idx")
}

model booking {
  id          Int       @id @default(autoincrement())
  userName    String
  phone       String?
  shopId      Int
  barberId    Int
  serviceId   Int
  startTime   DateTime
  status      String    @default("SCHEDULED")

  /// ✅ 占用锁：true = 占用时段；false/NULL = 不占用
  ///（保留 nullable 以兼容历史数据）
  slotLock    Boolean?  @default(true)

  /// ✅ 真正的“时段唯一占用”键：
  /// 只在 slotLock=true 时写入，例如：bf:{barberId}:{startTimeMillis}
  /// 取消/完成释放时置为 NULL
  slotKey     String?   @unique(map: "Booking_slotKey_key")

  completedAt DateTime?
  note        String?
  source      String?
  price       Int?
  payStatus   String    @default("unpaid")
  payAmount   Int       @default(0)
  payOrderNo  String?
  payTime     DateTime?
  splitStatus String    @default("pending")
  splitDetail String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  barber      barber    @relation(fields: [barberId], references: [id], map: "Booking_barberId_fkey")
  service     service   @relation(fields: [serviceId], references: [id], map: "Booking_serviceId_fkey")
  shop        shop      @relation(fields: [shopId], references: [id], map: "Booking_shopId_fkey")
  ledger      ledger[]

  /// ❌ 删除这个！它会导致 cancel 时 slotLock=true->false 撞历史记录而 P2002
  /// @@unique([barberId, startTime, slotLock], map: "Booking_barberId_startTime_slotLock_key")

  @@index([barberId], map: "Booking_barberId_idx")
  @@index([phone], map: "Booking_phone_idx")
  @@index([serviceId], map: "Booking_serviceId_idx")
  @@index([shopId], map: "Booking_shopId_idx")
  @@index([barberId, startTime], map: "Booking_barberId_startTime_idx")
}

model service {
  id              Int             @id @default(autoincrement())
  name            String
  durationMinutes Int
  price           Int
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  barberservice   barberservice[]
  booking         booking[]
}

model shop {
  id                 Int       @id @default(autoincrement())
  name               String
  address            String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  billingBaseMode    String    @default("none")
  billingBaseValue   Int       @default(0)
  billingExtraMode   String    @default("none")
  billingExtraValue  Int       @default(0)
  platformShareBasis Int       @default(0)
  shopShareBasis     Int       @default(0)
  barberShareBasis   Int       @default(0)
  enableAutoSplit    Boolean   @default(false)
  barber             barber[]
  booking            booking[]
}

model ledger {
  id        Int      @id @default(autoincrement())
  bookingId Int
  type      String // SETTLE / REFUND / ADJUST ...
  amount    Int
  status    String   @default("CREATED") // CREATED / SUCCESS / FAILED ...
  detail    String?
  createdAt DateTime @default(now())

  booking booking @relation(fields: [bookingId], references: [id], map: "Ledger_bookingId_fkey")

  @@unique([bookingId, type], map: "Ledger_bookingId_type_key")
  @@index([bookingId], map: "Ledger_bookingId_idx")
  @@map("ledger_entries")
}
